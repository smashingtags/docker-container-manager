{
  "id": "nginx",
  "name": "Nginx",
  "description": "High-performance HTTP server and reverse proxy",
  "category": "web-servers",
  "icon": "https://raw.githubusercontent.com/docker-library/docs/master/nginx/logo.png",
  "version": "1.0.0",
  "image": "nginx",
  "defaultConfig": {
    "name": "nginx",
    "image": "nginx",
    "tag": "latest",
    "environment": {},
    "ports": [
      {
        "hostPort": 80,
        "containerPort": 80,
        "protocol": "tcp",
        "description": "HTTP port"
      },
      {
        "hostPort": 443,
        "containerPort": 443,
        "protocol": "tcp",
        "description": "HTTPS port"
      }
    ],
    "volumes": [
      {
        "hostPath": "/data/nginx/html",
        "containerPath": "/usr/share/nginx/html",
        "mode": "ro",
        "description": "Web content directory"
      },
      {
        "hostPath": "/data/nginx/conf",
        "containerPath": "/etc/nginx/conf.d",
        "mode": "ro",
        "description": "Configuration directory"
      }
    ],
    "networks": ["bridge"],
    "restartPolicy": "unless-stopped",
    "resources": {
      "memory": 128,
      "cpus": 0.5
    },
    "healthCheck": {
      "test": ["CMD", "curl", "-f", "http://localhost/"],
      "interval": 30,
      "timeout": 10,
      "retries": 3,
      "startPeriod": 60
    }
  },
  "configSchema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Container Name",
        "description": "Name for the container instance"
      },
      "ports": {
        "type": "array",
        "title": "Port Mappings",
        "items": {
          "type": "object",
          "properties": {
            "hostPort": {
              "type": "number",
              "title": "Host Port",
              "minimum": 1,
              "maximum": 65535
            },
            "containerPort": {
              "type": "number",
              "title": "Container Port",
              "minimum": 1,
              "maximum": 65535
            },
            "protocol": {
              "type": "string",
              "title": "Protocol",
              "enum": ["tcp", "udp"]
            }
          }
        }
      },
      "volumes": {
        "type": "array",
        "title": "Volume Mappings",
        "items": {
          "type": "object",
          "properties": {
            "hostPath": {
              "type": "string",
              "title": "Host Path"
            },
            "containerPath": {
              "type": "string",
              "title": "Container Path"
            },
            "mode": {
              "type": "string",
              "title": "Access Mode",
              "enum": ["ro", "rw"]
            }
          }
        }
      },
      "resources": {
        "type": "object",
        "title": "Resource Limits",
        "properties": {
          "memory": {
            "type": "number",
            "title": "Memory Limit (MB)",
            "minimum": 64
          },
          "cpus": {
            "type": "number",
            "title": "CPU Limit",
            "minimum": 0.1
          }
        }
      }
    },
    "required": ["name"]
  },
  "documentation": "Nginx is a web server that can also be used as a reverse proxy, load balancer, mail proxy and HTTP cache. It's known for its high performance, stability, rich feature set, simple configuration, and low resource consumption.",
  "tags": ["web-server", "reverse-proxy", "http", "https"],
  "author": "Nginx Team",
  "homepage": "https://nginx.org/",
  "repository": "https://github.com/nginx/nginx"
}